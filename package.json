{
  "name": "yc-actions-yc-iam-token",
  "version": "1.1.0",
  "description": "GitHub Action issuing Yandex Cloud IAM Token.",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "git-tag": "git tag v`cat package.json | jq -r '.version' | awk -F. '{print $1}'` -f &&  git tag v`cat package.json | jq -r '.version'` -f"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yc-actions/yc-iam-token.git"
  },
  "keywords": [
    "actions",
    "yandex cloud",
    "login"
  ],
  "author": "Nikolay Matrosov",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@yandex-cloud/nodejs-sdk": "2.6.0"
  },
  "devDependencies": {
    "@types/node": "20.10.6",
    "@types/stream-buffers": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-prettier": "5.1.2",
    "eslint-plugin-jest": "^27.6.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
